{
    "compilerOptions": {
        "outDir": "build",
        "target": "ES6",
        "module": "commonjs",
        "sourceMap": true,
        "lib": ["esnext"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["dist"],
    "include": ["src"]
}
